<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.s17.moniteryourlife.LoginActivity"
    android:background="@drawable/login"
    >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/welcome"
        android:textColor="#33691E"
        android:textSize="60dp"
        android:typeface="sans"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/userNameEditV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name:"
        android:id="@+id/userName"
        android:textSize="20dp"
        android:layout_above="@+id/passwordEditV"
        android:layout_alignParentStart="true"
        android:textColor="#1b5e20"
         />

    <TextView
        android:textColor="#1b5e20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:textSize="20dp"
        android:id="@+id/password"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/userNameEditV" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Register"
        android:id="@+id/register"
        android:layout_alignTop="@+id/login"
        android:layout_alignEnd="@+id/passwordEditV" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Login"
        android:id="@+id/login"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/passwordEditV"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Input your user name"
        android:gravity="center"
        android:id="@+id/userNameEditV"
        android:layout_above="@+id/passwordEditV"
        android:layout_toEndOf="@+id/userName" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Input your password"
        android:password="true"
        android:gravity="center"
        android:id="@+id/passwordEditV"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/password"
        android:layout_alignStart="@+id/userNameEditV" />
</RelativeLayout>
