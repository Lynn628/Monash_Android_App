<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="10dp"
    android:background="@drawable/wall6"
   >


    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/ageText"
        android:layout_above="@+id/heightEdit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Height"
        android:id="@+id/heightText"
        android:layout_alignStart="@+id/weightText"
        android:layout_above="@+id/weightEdit" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weight"
        android:id="@+id/weightText"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/stepPMileEdit"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Activity Level"
        android:id="@+id/textView6"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/mileText"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_spinner"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginStart="37dp" />

    <EditText
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ageEdit"
        android:layout_alignBottom="@+id/ageText"
        android:layout_alignStart="@+id/registerbtn2"
        android:layout_toStartOf="@+id/textView7" />

    <EditText
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weightEdit"
        android:layout_alignBottom="@+id/weightText"
        android:layout_alignStart="@+id/heightEdit"
        android:layout_alignEnd="@+id/heightEdit" />

    <EditText
        android:textColor="#FFFF"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/heightEdit"
        android:layout_above="@+id/weightEdit"
        android:layout_alignStart="@+id/registerbtn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/registerbtn2"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/activity_spinner"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Steps Per Mile"
        android:id="@+id/mileText"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepPMileEdit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="203dp"
        android:layout_alignStart="@+id/weightEdit"
        android:layout_alignEnd="@+id/weightEdit" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender"
        android:id="@+id/genderText"
        android:layout_above="@+id/heightEdit" />

    <RadioGroup android:id="@+id/radioGroup"
        android:contentDescription="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ageEdit"
        android:layout_below="@+id/ageEdit"
        >

    <RadioButton
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioMale"
        android:text="Male"
        android:checked="true"
        android:layout_alignBottom="@+id/genderText"
        android:layout_alignStart="@+id/radioGroup"
        >
    </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioFemale"
            android:text="Female"
            android:textColor="#FFFF"
            android:layout_below="@+id/radioMale"
            >
        </RadioButton>
    </RadioGroup>

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="kg"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/weightEdit"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="cm"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/heightEdit"
        android:layout_toEndOf="@+id/heightEdit" />

    <TextView
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Steps"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/stepPMileEdit"
        android:layout_alignStart="@+id/textView5" />



</RelativeLayout>
