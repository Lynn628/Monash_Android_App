<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_fragment"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
   android:padding="20dp"
    android:background="@drawable/wall2">

    <TextView
        android:textColor="#2E7D32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/userNameEditV"
        android:text="User Name"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/homefrag_textV"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:textColor="#2E7D32"
        android:paddingTop="20dp"
        android:id="@+id/homefrag_textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello:"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#2E7D32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView11"
        android:layout_marginTop="51dp"
        android:text="@string/description"
        android:layout_below="@+id/userNameEditV"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#2E7D32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today is:"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#2E7D32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/dateEditV"
        android:layout_above="@+id/homefrag_textV"
        android:layout_toEndOf="@+id/textView12"
        android:layout_marginStart="23dp" />

</RelativeLayout>