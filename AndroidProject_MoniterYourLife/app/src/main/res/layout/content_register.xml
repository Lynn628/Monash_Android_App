<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wall6"
    tools:context="com.example.s17.moniteryourlife.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <TextView
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name:"
        android:id="@+id/userName"
        android:textSize="25dp"
        android:layout_marginTop="160dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="25dp"
        android:id="@+id/password"
        android:layout_below="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_alignEnd="@+id/userName" />

    <EditText
        android:password="true"
        android:textColor="#FFFF"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/passwordEditV"
        android:layout_alignBottom="@+id/password"
        android:layout_below="@+id/userName"
        android:layout_toEndOf="@+id/userName" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mointor your life from creating an account~"
        android:textSize="25dp"
        android:id="@+id/textView3"
        android:paddingTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/registerbtn1"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/confirmEditV"
        android:layout_alignEnd="@+id/textView10" />

    <EditText
        android:textColor="#FFFF"
        android:gravity="center"
        android:password="true"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/confirmEditV"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/registerbtn1" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confrim Password:"
        android:textSize="25dp"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/confirmEditV"
        android:layout_alignParentStart="true" />

    <EditText
        android:textColor="#FFFF"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/userNameEditV"
        android:layout_above="@+id/password"
        android:layout_alignEnd="@+id/passwordEditV"
        android:layout_toEndOf="@+id/userName" />

</RelativeLayout>
